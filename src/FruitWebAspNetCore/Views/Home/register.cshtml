@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>注册</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/css/register.css">
</head>

<body>
    <header class="page-header">
        <div style="margin-top: -20px; width: 100%;height: 75px;">
            <div class="logo-position">
                <img src="~/images/fruitFontbig.png" alt="pic">
            </div>
            <div class="wel-posititon">
                <h2>欢迎注册</h2>
            </div>
        </div>
    </header>
    <div class="" style="width: 1180px;height: 800px;margin: auto;">
        <form class="form-horizontal col-sm-offset-3" role="form">
            <div class="form-group">
                <label for="userName" class="col-sm-2 control-label">用户名</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="userName" placeholder="请输入您的用户名">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">设置密码</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" id="password" placeholder="请设置您的密码">
                </div>
            </div>
            <div class="form-group">
                <label for="passwordAgain" class="col-sm-2 control-label">确认密码</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" id="passwordAgain" placeholder="请再次输入您的密码">
                </div>
            </div>
            <div class="form-group">
                <label for="telephone" class="col-sm-2 control-label">电话号码</label>
                <div class="col-sm-4">
                    <input type="tel" class="form-control" id="telephone" placeholder="请输入您的电话">
                </div>
            </div>
            <button type="button" class="btn registerBtn col-sm-4">立即注册</button>
        </form>

    </div>
    <div class=""></div>
</body>
</html>